{
    "name": "willhoffmann/slim-api-skeleton",
    "description": "A Slim Framework skeleton api for rapid development",
    "type": "project",
    "license": "MIT",
    "homepage": "https://github.com/willhoffmann/slim-api-skeleton",
    "keywords": [
        "slim",
        "api",
        "rest",
        "skeleton"
    ],
    "authors": [
        {
            "name": "William Hoffmann",
            "email": "williamhoffmann@outlook.com",
            "role": "Developer"
        }
    ],
    "config": {
        "sort-packages": true,
        "process-timeout": 0
    },
    "support": {
        "issues": "https://github.com/willhoffmann/slim-api-skeleton/issues",
        "source": "https://github.com/willhoffmann/slim-api-skeleton"
    },
    "require": {
        "php": ">=5.5.0",
        "doctrine/migrations": "^1.8",
        "doctrine/orm": "^2.6",
        "monolog/monolog": "^1.17",
        "slim/php-view": "^2.0",
        "slim/slim": "^3.1",
        "vlucas/phpdotenv": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "tests/AppTest/"
        }
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "serve": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
